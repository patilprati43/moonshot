<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.mynotes.prajyot.moonshot" >

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logoediary"
        android:label="@string/app_name"
        android:theme="@style/AppTheme">
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@style/AppThemeNoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".EmployeeListActivity"
            android:label="Employee List"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".RequestList"
            android:label="Pending approvals"
            android:theme="@style/AppTheme"/>
        <activity
            android:name=".WelcomeUser"
            android:label="Ediary"
            android:theme="@style/AppThemeNoActionBar">
        </activity>
    </application>

</manifest>
